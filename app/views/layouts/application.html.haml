!!!
%html
  %head
    %meta{'http-equiv' => 'Content-Type', :content => 'text/html'}
    %title webhack
    = stylesheet_link_tag 'webhack'
    = javascript_include_tag './lib/jquery-1.3.2', './lib/jquery.extensions.min', './lib/jquery.timers-1.2', './src/application', "./src/screen.js", "./src/listener.js"
  %body
    - if @current_user_session
      = link_to "log out", user_session_path, :method => :delete, :class => "logout"
    = yield
